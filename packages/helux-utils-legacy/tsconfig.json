{
  "compilerOptions": {
    "target": "es5",
    "module": "es2020",
    "moduleResolution": "node",
    "jsx": "preserve",
    "declaration": true,
    "pretty": true,
    "skipLibCheck": true,
    "rootDir": "src",
    "sourceMap": false,
    "strict": true,
    "removeComments": false,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "noFallthroughCasesInSwitch": true,
    "outDir": "src-js",
    "lib": ["es2019", "dom"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "debug/**/*"]
}
